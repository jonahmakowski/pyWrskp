script/source = "extends OptionButton


# Called when the node enters the scene tree for the first time.
func _ready() -> void:
	selected = Globals.style

func _on_item_selected(index: int) -> void:
	Globals.style = index
	Globals.current_options['style'] = index
	Controller.save_options(Globals.current_options)
"

